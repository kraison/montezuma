{
  "parser": "babel-eslint",
  "rules": {
    "max-len": [2, 80, 2, {"ignoreUrls": true}],
    "max-depth": [2, 7],
    "max-statements": [2, 172],
    "complexity": [2, 88],
    "no-unused-vars": 2,
    "no-eval": 2,
    "no-underscore-dangle": 0,
    "no-loop-func": 2,
    "no-floating-decimal": 2,
    "curly": 2,
    //"eqeqeq": [2, "smart"],
    "quotes": [2, "single"],
    "indent": [2, 4, {"SwitchCase": 1}],
    "no-trailing-spaces": 2,
    "no-multi-spaces": 2,
    "array-bracket-spacing": 2,
    "new-cap": 2,
    "radix": [2, "always"]
  },
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": false
  }
}
